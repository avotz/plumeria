body 
	&.nav-is-open
		.nav-container 
			left 0
			right 0
			width 100%
			visibility visible
		.nav-menu 
			li 
				transform: translateX(0);
				opacity 1
		
		.nav-btn-menu
			.fa-bars
				&:before
					content '\f00d'
.nav
	&-container 
		position fixed
		background-color #1E1E22
		left -350px
		top 0
		right 0
		bottom 0
		width 350px
		z-index 901
		visibility hidden
		overflow hidden
		transition all .85s cubic-bezier(.4,0,.2,1)
		
			
	&-menu
		position relative 
		background-color transparent
		width 100%
		left 0
		color white
		padding-left 40px
		padding-top 80px
		padding-bottom 80px
		li
		&-item
			display block
			line-height 3rem
			transform: translateX(-100%)
			transition: transform .45s cubic-bezier(.4,0,.2,1),opacity .3s cubic-bezier(.4,0,.2,1);
			//transition all .5s ease
			opacity 0
			&:nth-child(1)
				transition-delay .19s
			&:nth-child(2)
				transition-delay .23s
			&:nth-child(3)
				transition-delay .27s
			&:nth-child(4)
				transition-delay .31s
			&:nth-child(5)
				transition-delay .35s
			&:nth-child(6)
				transition-delay .39s
			
		a
		&-link
			display block
			color white
			font-weight 700
			font-size 1.6rem
			&:hover
				color turquesa
				margin-left 1rem
	&-aside
		display block
		background-color black
		color white
		position absolute
		left 0
		right 0
		bottom 0
		padding 2rem 0
		text-align center
		overflow hidden
		.social
			float right
			
			li 
				display inline-block
				
				a 
					color white
					display block
					font-size 1.5rem
					padding 1rem 1rem
		.copy
			position absolute
			bottom 3rem
			left 1rem
			
	&-btn-menu
		position fixed
		background-color transparent
		top 20px
		left 18px
		z-index 902
		border none
		color white
		font-size 2rem//2.8rem
		outline none
		.fa-bars
			&:before
				transition all .3s ease


